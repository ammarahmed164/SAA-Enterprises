rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /orders/{document=**} {
      // Allow a user to create and read their own individual orders
      allow create, get: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to query for a list of their own orders
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }
  }
}