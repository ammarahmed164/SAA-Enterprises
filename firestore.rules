
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /orders/{orderId} {
      // Allow a user to create an order if they are logged in and the order's userId matches their own.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow a user to get a single order if they are logged in and the order's userId matches their own.
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;

      // Allow a user to list (query for) their own orders.
      allow list: if request.auth != null && request.auth.uid == request.query.filters.userId.value;
    }
  }
}
